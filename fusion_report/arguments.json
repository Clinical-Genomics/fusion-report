{
    "args": {
        "run": {
            "mandatory": [
                {
                    "key": "sample",
                    "help": "Sample name"
                },
                {
                    "key": "output",
                    "help": "Output directory"
                },
                {
                    "key": "db_path",
                    "help": "Path to folder where all databases are stored."
                },
                {
                    "key": "--use_cosmic",
                    "help": "Use cosmic database",
                    "type": "bool",
                    "default": false
                },
                {
                    "key": "--use_mitelman",
                    "help": "Use Mitelman database",
                    "type": "bool",
                    "default": false
                },
                {
                    "key": "--use_fusiongdb",
                    "help": "Use FusionGDB",
                    "type": "bool",
                    "default": false
                },
                {
                    "key": "--use_fusiongdb2",
                    "help": "Use FusionGDB2",
                    "type": "bool",
                    "default": false
                }
            ],
            "tools": [
                {
                    "key": "--ericscript",
                    "help": "EricScript output file"
                },
                {
                    "key": "--fusioncatcher",
                    "help": "Fusioncatcher output file"
                },
                {
                    "key": "--starfusion",
                    "help": "STAR-Fusion output file"
                },
                {
                    "key": "--pizzly",
                    "help": "Pizzly output file"
                },
                {
                    "key": "--squid",
                    "help": "Squid output file"
                },
                {
                    "key": "--dragen",
                    "help": "Illumina Dragen Bio-IT Platform output file"
                },
                {
                    "key": "--arriba",
                    "help": "Arriba output file"
                },
                {
                    "key": "--jaffa",
                    "help": "Jaffa output file"
                }
            ],
            "optionals": [
                {
                    "key": ["--allow-multiple-gene-symbols"],
                    "help": "Case when fusion gene symbol can't be determined and multiple fusion options are provided. By default provide the fist proposed fusion.",
                    "action": "store_true"
                },
                {
                    "key": ["-c", "--config"],
                    "help": "Input config file",
                    "default": ""
                },
                {
                    "key": ["-t", "--tool-cutoff"],
                    "help": "Number of tools required to detect a fusion",
                    "default": 2
                },
                {
                    "key": ["--export"],
                    "help": "Export fusions in different formats. Currently supported: json, csv.",
                    "default": "json"
                }
            ]
        },
        "download": {
            "mandatory": [
                {
                    "key": "output",
                    "help": "Output directory"
                },
                {
                    "key": "--use_cosmic",
                    "help": "Use cosmic database",
                    "type": "bool",
                    "default": false
                },
                {
                    "key": "--use_mitelman",
                    "help": "Use Mitelman database",
                    "type": "bool",
                    "default": false
                },
                {
                    "key": "--use_fusiongdb",
                    "help": "Use FusionGDB",
                    "type": "bool",
                    "default": false
                },
                {
                    "key": "--use_fusiongdb2",
                    "help": "Use FusionGDB2",
                    "type": "bool",
                    "default": false
                }

            ],
            "cosmic": [
                {
                    "key": "--cosmic_usr",
                    "help": "COSMIC username"
                },
                {
                    "key": "--cosmic_passwd",
                    "help": "COSMIC password"
                },
                {
                    "key": "--cosmic_token",
                    "help": "COSMIC token"
                }
            ]
        }
    }
}